{
    "name": "mougrim/php-logger",
    "description": "Simple and fast php logging library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "mitallast",
            "email": "mitallast@gmail.com"
        },
        {
            "name": "Mougrim",
            "email": "rinat@mougrim.ru"
        }
    ],
    "require": {
        "php": ">=5.5.0"
    },
    "require-dev": {
        "ext-pcntl": "*",
        "phpunit/phpunit": "3.7.*"
    },
    "suggest": {
        "ext-runkit": "For run tests on php5.x",
        "ext-uopz": "For run tests on php7.x or above"
