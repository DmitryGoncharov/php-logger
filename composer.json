{
    "name": "mougrim/php-logger",
    "description": "Simple and fast php logging library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "mitallast",
            "email": "mitallast@gmail.com"
        },
        {
            "name": "Mougrim",
            "email": "rinat@mougrim.ru"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "source"
    },
    "require": {
        "php": ">=5.5.0"
    },
    "require-dev": {
        "ext-pcntl": "*",
        "phpunit/phpunit": "^5",
        "mougrim/phpunit-soft-mocks": "1.0.0-beta1",
        "johnkary/phpunit-speedtrap": "^1.0",
        "codeclimate/php-test-reporter": "0.*",
        "phpro/grumphp": "^0",
        "friendsofphp/php-cs-fixer": "^2"
    },
    "autoload": {
        "psr-4": {
            "Mougrim\\Logger\\": "src"
        }
    },
    "extra": {
        "enable-patching": true
    }
}
